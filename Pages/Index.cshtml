@page
@model IndexModel
@{
    ViewData["Title"] = "Schedulo | Home";
}

<div class="container text-center mt-5">

    <h1 class="display-4 fw-semibold">
        Welcome to <span class="text-primary">Schedulo</span>
    </h1>

    <p class="lead text-muted mt-3">
        A simple way for students to organize classes, track assignments,
        and stay on top of deadlines — without the stress.
    </p>

    <div class="mt-4">
        <a class="btn btn-primary btn-lg px-4 me-2" href="/Dashboard/Index">
            Get Started
        </a>
        <a class="btn btn-link text-primary btn-lg px-3" href="/Assignments/Index">
            View Assignments
        </a>
    </div>

    <hr class="my-5 w-50 mx-auto" />

    <div class="row text-start justify-content-center">
        <div class="col-md-3">
            <h6 class="fw-semibold text-primary">Plan</h6>
            <p class="text-muted small">
                Build schedules that fit your academic life.
            </p>
        </div>

        <div class="col-md-3">
            <h6 class="fw-semibold text-primary">Track</h6>
            <p class="text-muted small">
                Keep assignments and exams organized.
            </p>
        </div>

        <div class="col-md-3">
            <h6 class="fw-semibold text-primary">Focus</h6>
            <p class="text-muted small">
                Spend less time worrying, more time studying.
            </p>
        </div>
    </div>

</div>
